<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Orçamento <%= quote.quote_number %></title>
    <link rel="stylesheet" href="http://localhost:3000/css/orcamento.css">
</head>
<body>
    
    <main class="content">
        <header class="main-header">
            <div class="company-info">
                <h1><%= company.name.toUpperCase() %></h1>
                <div class="subtitle">TKZ SISTEMAS</div>
                <p>ENDEREÇO: <%= company.address %></p>
                <p>CNPJ: <%= company.cnpj %></p>
                <p>EMAIL: <%= company.email %> &nbsp; CEL: <%= company.cell %> &nbsp;
            </div>
            <div class="quote-info">
                <img src="http://localhost:3000/img/ver.jpeg" alt="Logo da Empresa" class="company-logo">
                <h2>ORÇAMENTO <%= quote.quote_number %></h2>
                <p><%= formatDate(quote.date) %></p>
            </div>
        </header>

        <section class="client-info">
            <p><strong><%= client.name.toUpperCase() %></strong></p>
            <p>ENDEREÇO: <%= client.address %></p>
            <p>CELULAR: <%= client.phone %></p>
        </section>

        <section class="products">
            <h2 class="section-title">PRODUTOS</h2>
            <% quote.items.forEach(function(item, index) { %>
                <div class="item">
                    <div class="item-image-container">
                        <% if (item.image_filename) { %>
                            <img src="http://localhost:3000/uploads/<%= item.image_filename %>" alt="<%= item.title %>">
                        <% } %>
                    </div>
            
                    <div class="item-details-container">
                        <div class="item-details">
                            <div class="item-header">
                                <strong>ITEM <%= index + 1 %> - <%= item.title %></strong>
                            </div>
                            <div class="specs">
                                <span>LARGURA: <%= item.width %></span>
                                <span>ALTURA: <%= item.height %></span>
                            </div>
                            <div class="specs-color">
                                <p>COR DO VIDRO: <%= item.glass %></p>
                                <p>COR DOS ALUMÍNIOS: <%= item.aluminum %></p>
                                <p>COR DAS FERRAGENS: <%= item.hardware %></p>
                                <p>QUANTIDADE: <%= item.quantity %></p>
                            </div>
                        </div>
                        <div class="item-value">
                            <% if (item.unit_price) { %>
                                <p>VALOR UNITÁRIO: R$ <%= formatCurrency(item.unit_price) %></p>
                            <% } %>
                            <p><strong>VALOR TOTAL: R$ <%= formatCurrency(item.total_price) %></strong></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </section>
    </main>

    <footer class="main-footer">
        <div class="summary">
            <div class="delivery-info">
                <% if (quote.delivery_date) { %>
                    <p>PREVISÃO DE ENTREGA: <strong><%= formatDate(quote.delivery_date) %></strong></p>
                <% } %>
                <% if (quote.valid_until) { %>
                    <p>ORÇAMENTO VÁLIDO ATÉ: <strong><%= formatDate(quote.valid_until) %></strong></p>
                <% } %>
            </div>
            <div class="total-section">
                <span>TOTAL:</span>
                <span class="total-value"><%= formatCurrency(quote.total) %></span>
            </div>
        </div>
        <div class="signatures">
            <div class="signature-line">
                <p class="signature-name"><%= client.name.toUpperCase() %></p>
                <p class="signature-role"></p>
            </div>
            <div class="signature-line">
                <p class="signature-name"><%= company.name.toUpperCase() %></p>
            </div>
        </div>
    </footer>

</body>
</html>